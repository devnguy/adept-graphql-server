datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId           Int              @id @default(autoincrement())
  name             String
  email            String
  type             UserType
  skills           Skill[]
  jobApplications  JobApplication[]
  jobPostings      JobPosting[]
  contacts         User[]           @relation("contacts")
  password         String
  city             String?
  state            String?
  resume           Resume?
  contactsRelation User[]           @relation("contacts")
}

model JobApplication {
  jobAppId    Int        @id @default(autoincrement())
  user        User       @relation(fields: [userId], references: [userId])
  jobPosting  JobPosting @relation(fields: [jobPostId], references: [jobPostId])
  dateApplied DateTime   @default(now())
  userId      Int
  jobPostId   Int
}

model JobPosting {
  jobPostId      Int              @id @default(autoincrement())
  skillsRequired Skill[]
  positionTitle  String
  company        String
  datePosted     DateTime         @default(now())
  city           String?
  state          String?
  salary         Int?
  type           JobType
  description    String
  applicants     JobApplication[]
  postedBy       User             @relation(fields: [userId], references: [userId])
  userId         Int
}

model Skill {
  skillId    Int          @id @default(autoincrement())
  name       String
  User       User[]
  JobPosting JobPosting[]
}

model School {
  schoolId  Int    @id @default(autoincrement())
  name      String
  degree    String
  startDate Int
  endDate   Int?
  major     String
  gpa       Float?
  Resume    Resume @relation(fields: [resumeId], references: [resumeId])
  resumeId  Int
}

model WorkExperience {
  workExpId         Int     @id @default(autoincrement())
  company           String
  position          String
  startDate         Int
  endDate           Int?
  isCurrentPosition Boolean
  city              String?
  state             String?
  description       String
  Resume            Resume  @relation(fields: [resumeId], references: [resumeId])
  resumeId          Int
}

model Resume {
  resumeId       Int              @id @default(autoincrement())
  education      School[]
  workExperience WorkExperience[]
  User           User             @relation(fields: [userId], references: [userId])
  userId         Int
}

enum UserType {
  EMPLOYEE
  EMPLOYER
}

enum JobType {
  FULL_TIME
  PART_TIME
  INTERNSHIP
}
